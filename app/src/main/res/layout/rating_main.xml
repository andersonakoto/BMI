<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/button_corners"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:windowExitAnimation="@anim/slide_up"
    android:windowSoftInputMode="adjustPan"
    tools:context=".RatingActivity">


    <Button
        android:id="@+id/bmi_rating"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="177dp"
        android:layout_height="68dp"
        android:layout_marginBottom="76dp"
        android:background="@drawable/button_edge"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackgroundBorderless"
        android:text="Submit Rating"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RatingBar
        android:id="@+id/ratingBar_bmi"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_marginBottom="40dp"
        android:background="@color/browser_actions_bg_grey"
        android:theme="@style/RatingBar"
        app:layout_constraintBottom_toTopOf="@+id/bmi_rating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ratebmi_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kindly Rate BMI:"
        android:textColor="@color/bmi_icon_background"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ratingBar_bmi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.86" />

</androidx.constraintlayout.widget.ConstraintLayout>